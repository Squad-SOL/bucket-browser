{{#each restaurants as |restaurant|}}
  <div>
    <div class="restaurant-selectable" data-id="{{restaurant.id}}">
      <p class="restaurant-name-style">{{restaurant.name}}</p>
    </div>
    {{#if restaurant.achieved}}
    <p>Visited!</p>
    {{else}}
    <div class="restaurant-check-icon" data-id="{{restaurant.id}}">
      <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
    </div>
    {{/if}}
    <div class="restaurant-trash-icon" data-id="{{restaurant.id}}">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </div>
  </div>
{{/each}}
